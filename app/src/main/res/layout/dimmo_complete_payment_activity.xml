<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include android:id="@+id/food"
        layout="@layout/layout_header"/>

    <hckthn.dimmo.customViews.PrettyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="My Dimmo"
        custom:font="fonts/Pilgiche.ttf"
        android:textColor="@color/textAccent"/>
    <include android:id="@+id/cookie"
        layout="@layout/complete_product_item"/>

    <include android:id="@+id/walk"
        layout="@layout/complete_product_item"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: "/>

    <TextView android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>